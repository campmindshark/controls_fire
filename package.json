{
  "name": "controls_fire",
  "version": "0.1.0",
  "description": "Control Code for Propane Flame Effect Systems by MindShark",
  "main": "./server/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:prod": "npm run build:server && npm run build:client",
    "start":
      "npm run build:prod && NODE_ENV=production node ./build/server/server.js --exec babel-node --presets env",
    "build:watch:client:dev":
      "webpack --config ./webpack.client.config.js/ --mode development --watch --progress --colors",
    "build:watch:server:dev":
      "webpack --config ./webpack.server.config.js/ --mode development --watch --progress --colors",
    "babel:watch:server": "babel ./server -d build/server --watch",
    "start:server":
      "nodemon ./build/server/server.js --exec babel-node --presets env"
  },
  "author": "Tushar Shah",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^4.19.1",
    "html-webpack-plugin": "^3.1.0",
    "nodemon": "^1.17.2",
    "parallelshell": "^3.0.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  }
}
